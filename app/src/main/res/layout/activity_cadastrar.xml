<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background_01"
    tools:context="com.example.alysson.mantvida2016.CadastrarActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#DEDEDE"
                android:textAlignment="center"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Todos os campos são obrigatórios"
                android:id="@+id/texView10"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:hint="Nome"
                android:inputType="textEmailAddress"
                android:id="@+id/et_actCadastrar_name"
                android:textAlignment="center"
                android:layout_below="@+id/texView10"
                android:background="@drawable/drawable_labels_and_buttons"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin__labels_top"
                android:layout_marginStart="@dimen/margin__labels_top"
                android:layout_marginLeft="@dimen/margin__labels_top"
                android:layout_marginEnd="@dimen/margin__labels_top"
                android:layout_marginRight="@dimen/margin__labels_top"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:hint="Email"
                android:layout_below="@+id/et_actCadastrar_name"
                android:inputType="textEmailAddress"
                android:id="@+id/et_actCadastrar_email"
                android:textAlignment="center"
                android:background="@drawable/drawable_labels_and_buttons"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin__labels_top"
                android:layout_marginStart="@dimen/margin__labels_top"
                android:layout_marginLeft="@dimen/margin__labels_top"
                android:layout_marginEnd="@dimen/margin__labels_top"
                android:layout_marginRight="@dimen/margin__labels_top"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:hint="Login"
                android:layout_below="@+id/et_actCadastrar_email"
                android:inputType="textPersonName"
                android:id="@+id/et_actCadastrar_login"
                android:gravity="center"
                android:background="@drawable/drawable_labels_and_buttons"
                android:layout_marginTop="@dimen/margin__labels_top"
                android:layout_marginStart="@dimen/margin__labels_top"
                android:layout_marginLeft="@dimen/margin__labels_top"
                android:layout_marginEnd="@dimen/margin__labels_top"
                android:layout_marginRight="@dimen/margin__labels_top"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:hint="Senha"
                android:layout_below="@+id/et_actCadastrar_login"
                android:inputType="textPassword"
                android:id="@+id/et_actCadastrar_senha"
                android:background="@drawable/drawable_labels_and_buttons"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin__labels_top"
                android:layout_marginStart="@dimen/margin__labels_top"
                android:layout_marginLeft="@dimen/margin__labels_top"
                android:layout_marginEnd="@dimen/margin__labels_top"
                android:layout_marginRight="@dimen/margin__labels_top"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:inputType="textPassword"
                android:hint="Repetir Senha"
                android:layout_weight="0.25"
                android:layout_below="@+id/et_actCadastrar_senha"
                android:id="@+id/et_actCadastrar_repSenha"
                android:background="@drawable/drawable_labels_and_buttons"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin__labels_top"
                android:layout_marginStart="@dimen/margin__labels_top"
                android:layout_marginLeft="@dimen/margin__labels_top"
                android:layout_marginEnd="@dimen/margin__labels_top"
                android:layout_marginRight="@dimen/margin__labels_top"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Registrar"
                android:id="@+id/bt_actCadastrar_registrar"
                android:layout_gravity="right"
                android:layout_below="@+id/et_actCadastrar_repSenha"
                android:textColor="#DCDCDC"
                android:background="@drawable/drawable_button_login"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/margin__labels_top"
                android:layout_marginStart="@dimen/margin__labels_top"
                android:layout_marginLeft="@dimen/margin__labels_top"
                android:layout_marginEnd="@dimen/margin__labels_top"
                android:layout_marginRight="@dimen/margin__labels_top"
                android:onClick="callMainActivityCadastrar"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/btact_Cadastrar_cancelar"
                android:text="Cancelar"
                android:layout_below="@+id/bt_actCadastrar_registrar"
                android:textColor="#DCDCDC"
                android:background="@drawable/drawable_button_cancel"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin__labels_top"
                android:layout_marginStart="@dimen/margin__labels_top"
                android:layout_marginLeft="@dimen/margin__labels_top"
                android:layout_marginEnd="@dimen/margin__labels_top"
                android:layout_marginRight="@dimen/margin__labels_top"
                android:onClick="finishCadastrarActivity"/>

        </RelativeLayout>


    </ScrollView>



</RelativeLayout>

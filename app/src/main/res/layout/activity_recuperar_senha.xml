<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_02"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context="com.example.alysson.mantvida2016.RecuperarSenha">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="Digite seu email"
        android:id="@+id/et_actRecSenha_email"
        android:textAlignment="center"
        android:background="@drawable/drawable_labels_and_buttons"
        android:gravity="center"
        android:layout_marginStart="@dimen/margin__labels_top"
        android:layout_marginLeft="@dimen/margin__labels_top"
        android:layout_marginEnd="@dimen/margin__labels_top"
        android:layout_marginRight="@dimen/margin__labels_top"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Recuperar"
        android:id="@+id/bt_actRecuperarSenha_Recuperar"
        android:layout_gravity="right"
        android:layout_below="@+id/et_actRecSenha_email"
        android:textColor="#DCDCDC"
        android:background="@drawable/drawable_button_login"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin__labels_top"
        android:layout_marginStart="@dimen/margin__labels_top"
        android:layout_marginLeft="@dimen/margin__labels_top"
        android:layout_marginEnd="@dimen/margin__labels_top"
        android:layout_marginRight="@dimen/margin__labels_top"/>

</RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_devotional"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:focusable="true"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Leitura Diária:"
                android:id="@+id/textView6"
                android:layout_marginTop="@dimen/margin_labels_devotional_sides"
                android:layout_marginStart="@dimen/margin_labels_devotional_sides"
                android:layout_marginLeft="@dimen/margin_labels_devotional_sides"
                android:layout_marginEnd="@dimen/margin_labels_devotional_sides"
                android:layout_marginRight="@dimen/margin_labels_devotional_sides"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Parashá:"
                android:layout_marginLeft="@dimen/margin_labels_devotional_sides"
                android:layout_marginRight="@dimen/margin_labels_devotional_sides"
                android:id="@+id/textView8"
                android:layout_below="@+id/tv_leitura_diaria_devotional"
                android:layout_marginTop="10sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/tv_leitura_diaria_devotional"
                android:inputType="textMultiLine"
                android:ems="10"
                android:enabled="false"
                android:layout_marginRight="@dimen/margin_labels_devotional_sides"
                android:layout_marginTop="10sp"
                android:layout_below="@+id/textView6"
                android:layout_alignStart="@+id/textView8"
                android:layout_alignLeft="@+id/textView8"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:enabled="false"
                android:ems="10"
                android:inputType="textMultiLine"
                android:layout_marginTop="10sp"
                android:layout_marginRight="@dimen/margin_labels_devotional_sides"
                android:id="@+id/tv_parasha_devotional"
                android:layout_below="@+id/textView8"
                android:layout_alignStart="@+id/et_titulo_devotional"
                android:layout_alignLeft="@+id/et_titulo_devotional"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Título (Opcional)"
                android:textAlignment="center"
                android:maxLines="3"
                android:gravity="center"
                android:id="@+id/et_titulo_devotional"
                android:layout_below="@+id/tv_parasha_devotional"
                android:layout_marginTop="10sp"
                android:layout_marginStart="@dimen/margin_labels_devotional_sides"
                android:layout_marginLeft="@dimen/margin_labels_devotional_sides"
                android:layout_marginEnd="@dimen/margin_labels_devotional_sides"
                android:layout_marginRight="@dimen/margin_labels_devotional_sides"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Versículo a memorizar:"
                android:id="@+id/textView10"
                android:layout_below="@id/et_titulo_devotional"
                android:layout_marginTop="10sp"
                android:layout_marginStart="@dimen/margin_labels_devotional_sides"
                android:layout_marginLeft="@dimen/margin_labels_devotional_sides"
                android:layout_marginEnd="@dimen/margin_labels_devotional_sides"
                android:layout_marginRight="@dimen/margin_labels_devotional_sides"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_versiculo_memorizar"
                android:layout_marginTop="10sp"
                android:layout_marginStart="@dimen/margin_labels_devotional_sides"
                android:layout_marginLeft="@dimen/margin_labels_devotional_sides"
                android:layout_marginEnd="@dimen/margin_labels_devotional_sides"
                android:layout_marginRight="@dimen/margin_labels_devotional_sides"
                android:layout_below="@+id/textView10"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="O que aprendi:"
                android:id="@+id/textView11"
                android:layout_below="@id/et_versiculo_memorizar"
                android:layout_marginTop="10sp"
                android:layout_marginStart="@dimen/margin_labels_devotional_sides"
                android:layout_marginLeft="@dimen/margin_labels_devotional_sides"
                android:layout_marginEnd="@dimen/margin_labels_devotional_sides"
                android:layout_marginRight="@dimen/margin_labels_devotional_sides" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/et_aprendizado_devotional"
                android:layout_marginTop="10sp"
                android:layout_marginStart="@dimen/margin_labels_devotional_sides"
                android:layout_marginLeft="@dimen/margin_labels_devotional_sides"
                android:layout_marginEnd="@dimen/margin_labels_devotional_sides"
                android:layout_marginRight="@dimen/margin_labels_devotional_sides"
                android:layout_below="@+id/textView11"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Mensagem de Deus para mim"
                android:id="@+id/textView12"
                android:layout_marginTop="10sp"
                android:layout_marginStart="@dimen/margin_labels_devotional_sides"
                android:layout_marginLeft="@dimen/margin_labels_devotional_sides"
                android:layout_marginEnd="@dimen/margin_labels_devotional_sides"
                android:layout_marginRight="@dimen/margin_labels_devotional_sides"
                android:layout_below="@+id/et_aprendizado_devotional"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/et_mensagemDeDeus_devotional"
                android:layout_marginTop="10sp"
                android:layout_marginStart="@dimen/margin_labels_devotional_sides"
                android:layout_marginLeft="@dimen/margin_labels_devotional_sides"
                android:layout_marginEnd="@dimen/margin_labels_devotional_sides"
                android:layout_marginRight="@dimen/margin_labels_devotional_sides"
                android:layout_below="@+id/textView12"
                android:layout_centerHorizontal="true" />



        </RelativeLayout>

    </ScrollView>


</LinearLayout>